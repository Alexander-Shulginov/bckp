---
import SearchInput from '@/components/ui/SearchInput/SearchInput.astro';
import './BrandsSearch.scss';
---

<section class="search">
    <div class="container">
        <div class="search__inner">
            <div class="search__top">
                <h1 class="search__title">Бренды</h1>
                <SearchInput />
            </div>
            <div class="search__alphabet">
                <div class="search__alphabet-wrap">
                    <button class="search__alphabet-btn" type="button">A</button>
                    <button class="search__alphabet-btn" type="button">B</button>
                    <button class="search__alphabet-btn" type="button">C</button>
                    <button class="search__alphabet-btn" type="button">D</button>
                    <button class="search__alphabet-btn" type="button">E</button>
                    <button class="search__alphabet-btn" type="button">F</button>
                    <button class="search__alphabet-btn" type="button">G</button>
                    <button class="search__alphabet-btn" type="button">H</button>
                    <button class="search__alphabet-btn" type="button">I</button>
                    <button class="search__alphabet-btn" type="button">J</button>
                    <button class="search__alphabet-btn" type="button">K</button>
                    <button class="search__alphabet-btn" type="button">L</button>
                    <button class="search__alphabet-btn" type="button">M</button>
                    <button class="search__alphabet-btn" type="button">N</button>
                    <button class="search__alphabet-btn" type="button">O</button>
                    <button class="search__alphabet-btn" type="button">P</button>
                    <button class="search__alphabet-btn" type="button">Q</button>
                    <button class="search__alphabet-btn" type="button">R</button>
                    <button class="search__alphabet-btn" type="button">S</button>
                    <button class="search__alphabet-btn" type="button">T</button>
                    <button class="search__alphabet-btn" type="button">U</button>
                    <button class="search__alphabet-btn" type="button">V</button>
                    <button class="search__alphabet-btn" type="button">W</button>
                    <button class="search__alphabet-btn" type="button">X</button>
                    <button class="search__alphabet-btn" type="button">Y</button>
                    <button class="search__alphabet-btn" type="button">Z</button>
                </div>
                <p class="search__alphabet-text">*Для доставки доступны любые бренды, у&nbsp;которых есть беспошлинная доставка в&nbsp;Португалию</p>
            </div>
            <div class="search__list">
                <div class="search__items">
                    <div class="search__column">
                        <div class="search__item">Zara</div>
                        <div class="search__item">Zara home</div>
                        <div class="search__item">Massimo dutti</div>
                        <div class="search__item">H&m</div>
                    </div>
                    <div class="search__column">
                        <div class="search__item">Oysho</div>
                        <div class="search__item">COS</div>
                        <div class="search__item">Kiko</div>
                        <div class="search__item">Mango</div>
                    </div>
                    <div class="search__column">
                        <div class="search__item">Mango outlet</div>
                        <div class="search__item">Calzedonia</div>
                        <div class="search__item">Arket</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    .search {
        &__inner {
            display: grid;
            grid-template-columns: 2fr 305px;
            column-gap: 20px;

            @media (max-width: 1024px) {
                grid-template-columns: 1fr;

                row-gap: 24px;
            }
        }

        &__top {
        }

        &__title {
            font-family: $second-font;
            font-weight: 400;
            font-size: 50px;
            line-height: 1.12;

            margin-bottom: 12px;

            @media (max-width: 768px) {
                font-size: 30px;

                margin-bottom: 24px;
            }
        }

        &__alphabet {
            display: flex;
            flex-direction: column;
            gap: 40px;
            overflow: hidden;

            transform: translateY(23px);

            @media (max-width: 1024px) {
                transform: unset;
            }

            @media (max-width: 768px) {
                gap: 16px;
            }
        }

        &__alphabet-wrap {
            display: grid;
            gap: 20px;
            grid-template-columns: repeat(10, 1fr);

            @media (max-width: 1024px) {
                grid-template-columns: repeat(26, 1fr);

                overflow-x: auto;
                scrollbar-width: none;
                -ms-overflow-style: none;

                .search__alphabet-wrap::-webkit-scrollbar {
                    display: none;
                }
            }
        }

        &__alphabet-btn {
            background-color: transparent;
            font-size: 17px;
            line-height: 1.4;
            text-transform: uppercase;
            cursor: pointer;
        }

        &__alphabet-text {
            font-weight: 300;
            font-size: 15px;
            line-height: 1.3;
        }

        &__list {
        }

        &__items {
            display: flex;
            justify-content: start;

            gap: 12px;
            padding-bottom: 36px;
            border-bottom: 1px solid #dbdbdb;
        }

        &__column {
            flex-grow: 2;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        &__item {
            font-size: 17px;
            line-height: 1.4;
        }
    }
</style>
